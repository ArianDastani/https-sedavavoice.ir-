@using Application.Services.Message.Query;
@model List<GetMessageDto>;

@{
    ViewData["Title"] = "صندوق پیام ها";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-sm-6">
                    <h3>صندوق دریافت ایمیل</h3>
                </div>
                <div class="col-12 col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg></a></li>
                        <li class="breadcrumb-item">ایمیل</li>
                        <li class="breadcrumb-item active">صندوق دریافت</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="email-wrap">
            <div class="row">
                <div class="col-xl-3 box-col-3 col-md-6 xl-30">
                    <div class="email-sidebar">
                        <a class="btn btn-primary email-aside-toggle" href="javascript:void(0)">فیلتر ایمیل</a>
                        <div class="email-left-aside">
                            <div class="card">
                                <div class="card-body">
                                    <div class="email-app-sidebar">
                                        <div class="media">
                                            <div class="media-size-email"><img class="me-3 rounded-circle" src="../assets/images/user/user.png" alt=""></div>
                                            @*   <div class="media-body">
                                            <h6 class="f-w-600">امیر شریفی</h6>
                                            <p>Amirsharifi@gmail.com</p>
                                            </div> *@
                                        </div>
                                        <ul class="nav main-menu" role="tablist">

                                            <li><a asp-area="Admin" asp-controller="Message" asp-action="index"><span class="title"><i class="icon-folder"></i> همه ایمیل ها</span></a></li>
                                            <li><a asp-area="Admin" asp-controller="Message" asp-action="index" asp-route-IsRemove="true"><span class="title"><i class="icon-trash"></i> سطل زباله</span><span class="badge pull-right">(99)</span></a></li>
                                            <li>
                                                <hr>
                                            </li>
                                            <li><a href="/Admin/Message?IsRead=true"><span class="title"><i class="icon-email"></i> خوانده نشده</span></a></li>
                                            <li>
                                            </li>
                                            <li><a href="/Admin/Message"><span class="title"><i class="icon-file"></i> به روز رسانی</span></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-9 box-col-9 col-md-12 xl-70">
                    <div class="email-right-aside">
                        <div class="card email-body">
                            <div class="email-profile">
                                <div>
                                    <div class="pe-0 b-r-light"></div>
                                    <div class="email-top">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="media">
                                                    <label class="email-chek d-block">
                                                        <input class="checkbox_animated" type="checkbox" checked="">
                                                    </label>
                                                    <div class="media-body">
                                                        <div class="dropdown">
                                                            <button class="btn btn-primary dropdown-toggle" id="dropdownMenuButton" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">عمل</button>
                                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton"><a class="dropdown-item" href="javascript:void(0)">رفرش</a><a class="dropdown-item" href="javascript:void(0)">علامت گذاری به عنوان مهم</a><a class="dropdown-item" href="javascript:void(0)">فرستادن به هرزنامه</a><a class="dropdown-item" href="javascript:void(0)">فرستادن به سطل زباله</a></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="inbox">
                                        @foreach (var item in Model)
                                        {

                                            <div class="media">
                                                <div class="media-size-email">
                                                    <label class="d-block mb-0">
                                                        <input class="checkbox_animated" type="checkbox" checked="">
                                                    </label>
                                                    @if (item.Starred == true)
                                                    {
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star like"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>

                                                    }
                                                    else
                                                    {
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
                                                    }
                                                    <img class="me-3 rounded-circle" src="../assets/images/user/user.png" alt="">
                                                </div>
                                                

                                                    <div class="media-body">
                                                        <h6>@item.Name</h6>
                                                        <p>
                                                            <a asp-area="admin" asp-fragment="Message" asp-action="Read" asp-route-id="@item.Id">
                                                            @item.Text
                                                            </a>
                                                           
                                                        </p><span>1400/2/2</span>
                                                    </div>
                                                

                                            </div>


                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>